@{ Layout = "~/Views/Shared/_Dashboard.cshtml"; } @await Html.PartialAsync("productNav")

<div class="row">
    <div class="col-sm-8">
        <h3>Product list</h3>
        <div class="light_border " id="product_panel">
            <ul>
                @for(var i = 0; i<=10; i++)
                {
                    <li class="product_item clearfix">
                            <img  src="~/images/shirt.jpg" alt="">
                            <div class="product_detail_wrapper">
                                <span>P001E0</span>
                                <span>Stylish T-shirt</span>
                                <span>Shirt</span>
                                <span>$8.5</span>
                                <span>limited, Exclusive</span>
                                <span>4 image</span>
                            </div>
                            <div class=" float-right">
                                <a class="d-block fa fa-eye " asp-controller="product" asp-action="detail" asp-route-id="@i"></a>
                                <a class="d-block fa fa-edit" asp-controller="product" asp-action="edit" asp-route-id="@i"></a>
                                <a class="d-block fa fa-trash" asp-controller="product" asp-action="delete" asp-route-id="@i"></a>
                            </div>
                        </li>
                }
                
            </ul>
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>