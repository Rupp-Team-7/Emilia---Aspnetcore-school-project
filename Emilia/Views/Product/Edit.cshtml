@{ Layout = "~/Views/Shared/_Dashboard.cshtml"; } 
@await Html.PartialAsync("productNav")

<h3>Change product infomation</h3>
<form class="form light_border" id="form_create_product">

    <div class=" row">
        <div class="col-sm-6 ">
                <div class="form-group row">
                        <label for="" class="col-form-label col-sm-3">Product Code:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control form-control-sm" id="code" name="code" placeholder="code: P001E3">
                        </div>
                    </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Product Name:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control form-control-sm" id="name" name="name" placeholder="(eg. Stylish T-Shirt)">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Category:</label>
                <div class="col-sm-2">
                    <select class="custom-select custom-select-sm" name="category" id="category">
                        <option value="other">Other</option>
                        <option value="Clothes">Clothes</option>
                        <option value="Bag">Bag</option>
                        <option value="Shoes">Shoes</option>
                    </select>
                </div>
                <label for="" class="col-form-label col-sm-1">Tags:</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control form-control-sm" name="tags" placeholder="(eg. T-Shirt, couple, light)">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Unit Price:</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control form-control-sm" name="price" placeholder="$">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Origin:</label>
                <div class="col-sm-3">
                    <input class="form-control form-control-sm" type="text" name="origin" id="origin" placeholder="N/A">
                </div>
                <label for="" class="col-form-label col-sm-2">Material:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control form-control-sm" placeholder="N/A">
                </div>
            </div>
            <!-- <div class="form-group row">
                       
                    </div> -->
            <div class="form-group row ">
                <label for="" class="col-form-label col-sm-3">Description:</label>
                <div class="col-sm-8">
                    <textarea class="form-control form-control-sm" name="description" id="description" cols="30" rows="3"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Specification:</label>
                <div class="col-sm-8">
                    <textarea class="form-control form-control-sm" name="Specification" id="Specification" cols="30" rows="5"></textarea>
                </div>
            </div>

            
        </div>

        <div class="col-sm-4" id="imgage_uploader">
            <div class="uploader">
                <input class="uploader_input" type="file" class="" id="customFile">
                <label class="uploader_label" for="customFile">Add Photo</label>
            </div>
            @for(int i = 0; i < 5; i++)
            {
                 <div class="inline_box">
                    <button type="button" class="_remover">X</button>
                    <img class="_product_img" src="~/images/shirt.jpg"/>
                    
                </div>
            }
           
            <div>
                <button class="btn btn-primary btn-md " type="button">Save Change</button>
                <button class="btn btn-default btn-md" type="reset">Clear</button>
            </div>
        </div>
    </div>


</form>