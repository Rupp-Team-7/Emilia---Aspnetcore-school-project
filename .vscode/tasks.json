{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Emilia/Emilia.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "fast build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Emilia/Emilia.csproj",
                "--no-restore"
            ],
            "problemMatcher": "$msCompile"         
        },
        {
            "taskName": "Restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
    }
}