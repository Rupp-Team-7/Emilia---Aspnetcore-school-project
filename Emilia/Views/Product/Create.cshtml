@{ Layout = "~/Views/Shared/_Dashboard.cshtml"; } @await Html.PartialAsync("productNav")

<form class="">

    <div class=" row">
        <div class="col-sm-6 text-center">
            <div class="">
                <input type="file" class="" id="customFile">
                <label class="custom-file-label" for="customFile">Add Photo</label>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Product Name:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control form-control-sm" id="name" name="name">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Category:</label>
                <div class="col-sm-2">
                    <select class="custom-select custom-select-sm" name="category" id="category">
                        <option value="other">Other</option>
                        <option value="Clothes">Clothes</option>
                        <option value="Bag">Bag</option>
                        <option value="Shoes">Shoes</option>
                    </select>
                </div>
                <label for="" class="col-form-label col-sm-1">Tags:</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control form-control-sm" name="price">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Unit Price:</label>
                <div class="col-sm-5">
                    <input type="number" class="form-control form-control-sm" name="price">
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Origin:</label>
                <div class="col-sm-3">
                    <input class="form-control form-control-sm" type="text" name="origin" id="origin">
                </div>
                <label for="" class="col-form-label col-sm-2">Material:</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control form-control-sm">
                </div>
            </div>
            <!-- <div class="form-group row">
                       
                    </div> -->
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Description:</label>
                <div class="col-sm-8">
                    <textarea class="form-control form-control-sm" name="description" id="description" cols="30" rows="3"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-form-label col-sm-3">Specification:</label>
                <div class="col-sm-8">
                    <textarea class="form-control form-control-sm" name="Specification" id="Specification" cols="30" rows="5"></textarea>
                </div>
            </div>

            <div class="">
                <button class="btn btn-success btn-md " type="button">Upload</button>
                <button class="btn btn-warning btn-md" type="reset">Clear</button>
            </div>
        </div>
    </div>


</form>